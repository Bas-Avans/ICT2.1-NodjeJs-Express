extends layout

block content
    .container.mt-5
        .row
            .col-md-8.offset-md-2
                a.btn.btn-secondary.mb-3(href="/") Back
                .text-center
                    h1.display-4.mb-3= film.title
                    p.lead.mb-4= film.description
                    .card.mx-auto.mt-4(style="max-width: 400px;")
                        .card-body
                            ul.list-group.list-group-flush
                                li.list-group-item
                                    strong Release Year: 
                                    | #{film.release_year}
                                li.list-group-item
                                    strong Length: 
                                    | #{film.length} minutes
                                li.list-group-item
                                    strong Rating: 
                                    | #{film.rating}
