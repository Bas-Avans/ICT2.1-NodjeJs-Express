extends ../layout

block content
  .container.mt-5
    .row
      .col-md-8.offset-md-2
        .text-center
          h1.display-4.mb-3= `${actor.first_name} ${actor.last_name}`
          hr.my-4
          h1.display-4.mb-3 Films
          .row.mt-4
            each film in actor.films
              .col-md-4.mb-4
                a.card.h-100(href=`/films/${film.film_id}`)
                  .card-body
                    h5.card-title= film.title
                    p.card-text= film.description