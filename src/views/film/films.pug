extends ../layout

block content
  .container.mt-5
    .row
      .col-md-8.offset-md-2.text-center
        h1.display-4 Films
        include ../components/search
        p.text-muted Showing #{films.length} / #{totalCount} films
        hr.my-4
        .row.mt-4
          if films.length
            each film in films
              include ../components/film_card
          else
            .col-12
              .alert.alert-info No films found.
        include ../components/pagination